@import '_settings'

normalize-css()
base()

body
  padding: 0px
  font-family: "Open sans", Arial, sans-serif

a
  color: blue-darken-1

a:hover, a:focus
  color: blue-darken-2

.team-box.text-center img
  margin:0px auto;

section
  background-color:#fff;

.btn-primary
  background-color: light-blue

.btn-primary:hover, .btn-primary:focus, .btn-primary.focus, .btn-primary:active, .btn-primary.active, .open > .dropdown-toggle.btn-primary
  background-color: blue-darken-1

.navbar-default.affix .navbar-header .navbar-brand, 
.navbar-default .nav > li.active>a, .navbar-default .nav>li.active>a:focus,
.navbar-default.affix .nav > li>a:hover, .navbar-default.affix .nav>li>a:focus:hover,
.navbar-default.affix .navbar-header .navbar-brand:hover, .navbar-default.affix .navbar-header .navbar-brand:focus,
.navbar-default .nav > li>a:hover, .navbar-default .nav>li>a:focus:hover
  color: blue-darken-1

.bg-primary
  background-color: light-blue

.text-primary
  color: blue-lighten-1

hr
 border-color: blue-darken-1

.portfolio-box .portfolio-box-caption
  background-color: black
  background-color: rgba(38, 178, 241, 0.8)

.navbar-default .navbar-toggle
  border-color:#212121

.navbar-default .navbar-toggle:focus, 
.navbar-default .navbar-toggle:hover{
  background-color: transparent
}

.navbar-default .navbar-toggle .icon-bar
  background-color:#212121

body.main header 
  min-height: 30%;
  background-image: url(/img/header3.jpg);
  background-position: top;
  background-repeat:no-repeat;

body.main .content h2.title
  border-bottom:1px solid #dfdfdf
  padding-bottom:10px
  margin-bottom:20px

// Blog

.main .blog
  padding:0px
  box-shadow:0px 1px 5px 0px #bbb
  margin-bottom:20px

.main .blog .blog-header h3
  margin:0px
  color:#fff

.main .blog .blog-header
  padding:15px
  background-color:blue-darken-1

.main .blog .blog-list .list
  border-bottom: 1px solid #DFDFDF;
  box-shadow: 0px 0px 3px -1px #FFF;
  -webkit-box-shadow: 0px 0px 3px -1px #FFF;
  padding:10px
  background-color:#ECECEC

.main .blog .blog-list .list h5
  margin:4px auto
.main .blog .blog-list .list a
  color:#212121


 